<% if flash[:errors]%>

<ul>
    <% flash[:errors].each do |error|%>
        <li><%= error %></li>
        <% end %>
        </ul>
        <% end %>


<%=form_for @student do |f| %>
<%=f.label :name %>
<%=f.text_field :name%>
<br>
<%=f.label :mod%>
<%=f.number_field :mod%>
<br>
<%=f.submit%>
<br>
<% end %>
